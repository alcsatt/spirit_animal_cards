<div class="row">
  <% if !@user %>
    <div class="well">
      <% if @messages %>
        <% @messages.each do |message| %>
          <p> <%= message %></p>
        <% end %>
      <% end %>
      <h1>Learn about Spirit Animals</h1>
      <a href="/signup"><button class="btn btn-lg btn-primary">Sign up</button></a>
    </div>
    <div class="col-md-12">
      <% @cards_to_display.each do |card| %>
        <div class="col-md-4">
          <img src="<%= card.image_url %>" height="300"/>
        </div>
      <% end %>
    </div>
  <% else %>
  <div class="well">
    <h1>Choose a deck!</h1>
  </div>
  <div class="col-md-12">
    <% @decks.each do |deck| %>
      <%= erb :'_deck', locals: {deck: deck} %>
    <% end %>
  </div>
  <% end %>
</div>
