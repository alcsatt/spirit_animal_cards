
<div class="container">
  <div class="well">
    <h2>Guess</h2>
  </div>
  <hr />
  <div class="row">
    <div class="col-md-3">
      <h1><%= @game.deck.cards[@game.card_idx].name %></h1>
      <img src="<%= @game.deck.cards[@game.card_idx].image_url %>" width="200" />
    </div>
    <div class="col-md-9">
      <h2>This spirit animal has the following attribute: </h2>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>Choose one of the following:</tr>
        </thead>
        <tbody>
          <% @cards.each_with_index do |card, idx| %>
            <tr>
              <th><%= @letters[idx] %>.</th>
              <th>
                 <%= card %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="button-wrapper">
        <div class="col-md-3">
          <button class="btn btn-primary btn-lg">A</button>
        </div>
        <div class="col-md-3">
          <button class="btn btn-success btn-lg">B</button>
        </div>
        <div class="col-md-3">
          <button class="btn btn-warning btn-lg">C</button>
        </div>

    </div>

  </div>

</div>
